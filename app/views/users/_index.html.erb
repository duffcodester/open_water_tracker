<div ng-app='comsatrack' class='table-responsive'>
  <table ng-controller='UsersCtrl'
    class='table table-hover table-condensed' >
    <thead>
      <tr>
        <th>
         <a href="" ng-click="predicate.value = 'last_name'; reverse=!reverse">
           Last Name</a>
        </th>
        <th class = 'hidden-xs'>
           First Name </a>
        </th>
        <th class = 'hidden-xs'>Email</th>
        <th>Phone Number</th>
        <th class = 'hidden-xs'>Admin</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat='user in Users | orderBy:predicate.value:reverse |
                     filter:search'>
        <td>
          <a ng-href='/users/{{user.id}}'>
            {{user.last_name}}
          </a>
        </td>
        <td class='hidden-xs'>{{user.first_name}}</td>
        <td class='hidden-xs'>{{user.email}}</td>
        <td>
          <a ng-href="tel:{{user.phone_number}}">{{user.phone_number}}
        </td>
        <% if current_user.admin? && @user != current_user %>
          <td class='hidden-xs'>{{user.admin | booleanToWords}}</td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>




