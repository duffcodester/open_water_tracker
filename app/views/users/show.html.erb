<% provide(:title, "#{@user.first_name} #{@user.last_name.each_char.first}.") %>
<h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
<br>

<div class='table-width-desktop'>
  <% if current_user.admin? && @user != current_user %>
    <div class='u-pull-right'>
      <% if @user.admin? %>
        <%= bootstrap_form_for @user do |f| %>
          <%= f.hidden_field :admin, value: false %>
          <button class='u-full-width button'>Remove Admin</button>
        <% end %>
      <% else %>
        <%= bootstrap_form_for @user do |f| %>
          <%= f.hidden_field :admin, value: true %>
          <button class='u-full-width button'>Add Admin</button>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <div class='u-pull-left'>
    <%=link_to 'Edit Monitor', edit_user_path(@user), class: 'button button-primary'%>
  </div>

  <table class='table table-bordered'>
    <tr>
      <th>First Name</th>
      <td><%= @user.first_name %></td>
    </tr>
    <tr>
      <th>Last Name</th>
      <td><%= @user.last_name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>Phone</th>
      <td><%= phone_number_link(@user.phone_number) %></td>
    </tr>
    <tr>
      <th>Admin</th>
      <td><%= boolean_to_words(@user.admin) %></td>
    </tr>
  </table>
</div>
