<div ng-app='comsatrack'>
  <div ng-controller='SwimmersCtrl'>
    <% provide(:title, 'Check In') %>
    <h1 class='hidden-xs'>Swimmer Check In</h1>
    <center><h4 class='visible-xs'>Swimmer Check In</h4></center>
    <div class='row'>
      <div class='col-md-3'>
        <div class="input-group">
          <input class="form-control" ng-model="search"
                 placeholder="Search Last Name"/>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-search"></span>
          </span>
        </div>
      </div>
      <div class='col-md-7'></div>
      <div class='col-md-2'>
    </div>
    <div class='hidden-xs'>
      <br><br><br>
    </div>
    <%= render 'index' %>
    <center>
      <btn class="btn btn-default" ng-click="loadMore()">Load Additional Records</btn>
      <br><br>
      <div class='well'>
        <%= link_to 'Update Local USMS Database', { controller: 'swimmers', action: 'import' }, method: :get, class: 'btn btn-danger' %>
      </div>
    </center>
  </div>
</div>
