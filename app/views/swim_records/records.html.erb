<div ng-app='comsatrack'>
  <div ng-controller='RecordsCtrl'>
    <% provide(:title, 'Records') %>
    <h1 class='hidden-xs'>Historical Swimmer Data</h1>
    <center><h4 class='visible-xs'>Historical Swimmer Data</h4></center>
    <div class='row'>
      <div class='col-md-3'>
        <div class="input-group">
          <input class="form-control" ng-model="search"
                 placeholder="Search Last Name"/>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-search"></span>
          </span>
        </div>
      </div>
      <div class='col-md-7'></div>
      <div class='col-md-2'>
    </div>
    <div class='hidden-xs'>
      <br><br>
    </div>
    <br>
    <%= render 'records' %>
    <center>
      <btn class="btn btn-default" ng-click="loadMore()">Load Additional Records</btn>
    </center>
  </div>
</div>
