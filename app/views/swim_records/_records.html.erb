<div class='table-responsive'>
  <table class='table table-hover table-condensed'>
    <thead>
      <tr>
        <th>
         <a href="" ng-click="predicate.value = 'last_name'; reverse=!reverse">
           Last Name</a>
        </th>
        <th>
         <a href="" ng-click="predicate.value = 'first_name'; reverse=!reverse">
           First Name </a>
        </th>
        <th class = 'hidden-xs'>Check In</th>
        <th class = 'hidden-xs'>LMSC</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <tr ng-repeat='record in Records | orderBy:predicate.value:reverse |
                     filter:search'>
        <td>
          <a ng-href='/records/{{swim_record.id}}'>
            {{record.last_name}}
          </a>
        </td>
        <td>{{record.first_name}}</td>
        <td class = 'hidden-xs'>{{record.check_in | date:'MM/dd/yyyy @ h:mma'}}</td>
        <th class = 'hidden-xs'>{{record.lmsc}}</td>
        <td>
        </td>
      </tr>
    </tbody>
  </table>
</div>
