<div class='table-responsive'>
  <table class='table table-hover table-condensed'>
    <thead>
      <tr>
        <th></th>
        <th>
         <a href="" ng-click="predicate.value = 'last_name'; reverse=!reverse">
           Last Name</a>
        </th>
        <th>
         <a href="" ng-click="predicate.value = 'first_name'; reverse=!reverse">
           First Name </a>
        </th>
        <th class = 'hidden-xs'>Check In</th>
        <th class = 'hidden-xs'>LMSC</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <tr ng-repeat='swim_record in SwimRecords | orderBy:predicate.value:reverse |
                     filter:search' ng-class="{'muted':isTemp($index)}">
        <td>
          <a ng-href="{{swim_record.phone_number}}">
          <span style="color: green; font-size: 14pt" class="glyphicon glyphicon-earphone"></span>
          </a>
        </td>
        <td>
          <a href="tel:555-555-5555">555-555-5555</a>
          <a ng-href='/swim_records/{{swim_record.id}}'>
            {{swim_record.last_name}}
          </a>
        </td>
        <td>{{swim_record.first_name}}</td>
        <td class = 'hidden-xs'>{{swim_record.check_in | date:'MM/dd/yyyy @ h:mma'}}</td>
        <th class = 'hidden-xs'>{{swim_record.lmsc}}</td>
        <td>
          <div ng-click="deleteRow(swim_record)">
            <%= bootstrap_form_for SwimRecord.create do |f| %>
              <%= f.hidden_field :last_name, value: '{{swimmer_record.last_name}}!' %>
              <%= f.hidden_field :first_name, value: '{{swimmer_record.first_name}}!'  %>
              <%= f.hidden_field :check_in, value: '{{swim_record.check_in}}' %>
              <%= f.hidden_field :check_out, value: Time.now %>
              <%= f.hidden_field :swimmer_id, value: '{{swim_record.id}}!' %>
              <%= f.hidden_field :check_in_user_id, value: 1 %>
              <%= f.hidden_field :check_out_user_id, value: 1 %>
              <%= f.hidden_field :completed, value: true %>
              <%= f.submit 'Check Out', class: "btn btn-danger"  %>
            <% end %>
        </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
