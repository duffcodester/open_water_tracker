<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title))%></title>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <%= stylesheet_link_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css', 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class='container'>
      <% browser_check %>
      <%= flash_messages %>
      <div class="wrapper">
      <%= yield %>
      <div class="push"></div>
      <%= render 'layouts/footer_check_in' if @check_in %>
      <%= render 'layouts/footer_check_out' if @check_out %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>

