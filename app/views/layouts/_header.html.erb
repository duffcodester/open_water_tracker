<div class='navbar navbar-inverse navbar-static-top hidden-xs'>
  <div class='container'>
    <% if signed_in? %>
      <%= link_to 'COMSA Tracker', root_path, id: 'logo' %>
    <% end %>
    <div class = 'collapse navbar-collapse navbar-custom navHeaderCollapse'>
      <ul class = 'nav navbar-nav navbar-custom navbar-right' id='big-nav' >
        <% if user_signed_in? %>
        <li><%= link_to 'Check In', swimmers_path %></li>
        <li><%= link_to 'Check Out', swim_records_path %></li>
        <li><%= link_to 'Out of State', out_of_state_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to 'Monitors', users_path %></li>
            <li><%= link_to 'Analytics', analytics_path %></li>
          <% end %>
          <li class = 'dropdown'>
            <a href = '#' class = 'dropdown-toggle' data-toggle = 'dropdown'>
              Account<b class = 'caret'></b></a>
            <ul class = 'dropdown-menu' id='color-fix'>
              <li><%= link_to 'My Profile', current_user %></li>
              <li><%= link_to 'Edit My Profile', edit_user_path(current_user) %></li>
              <li class='divider'></li>
              <li>
                <%= link_to 'Update Local USMS Database', { controller: 'swimmers', action: 'import' }, method: :get %>
              </li>
              <li class='divider'></li>
              <li><%= link_to 'FAQ', faq_path %></li>
              <li><%= link_to 'Instructions',
                              '/COMSA_Tracker_Quick_Reference_rev2.pdf' %>
              </li>
              <li class='divider'></li>
              <li>
                <%= link_to "Logout", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class='mobile-nav'>
  <% if signed_in? %>
    <div class='visible-xs'>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <br>
        <div class="btn-group dropdown">
          <div class="btn-group">
          <% unless @check_in == false %>
            <%= link_to 'Check In', swimmers_path, class: 'btn btn-success',
                        role: 'button' %>
          <% end %>
          <% unless @check_out == false %>
            <%= link_to 'Check Out', swim_records_path, class: 'btn btn-danger', role: 'button' %>
          <% end %>
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <span class="glyphicon glyphicon-cog"></span> Settings
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'My Profile', current_user %></li>
            <% if current_user.admin? %>
              <li><%= link_to 'Monitors', users_path %></li>
            <% end %>
            <li><%= link_to 'Update Local Database', { controller: 'swimmers', action: 'import' }, method: :get %>
            </li>
            <li><%= link_to 'FAQ', faq_path %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>




