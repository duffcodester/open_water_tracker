<div class='table-responsive'>
  <table class='table table-hover table-condensed'>
    <thead>
      <tr>
        <th><%= sortable "custom_date", "Date Submitted" %></th>
        <th><%= sortable "stock_number", "Stock Number" %></th>
        <th><%= sortable "year", "Year" %></th>
        <th><%= sortable "make", "Make" %></th>
        <th><%= sortable "vehicle_model", "Model" %></th>
        <th><%= sortable "color", "Color" %></th>
        <th><%= sortable "customer_first_name", "First Name" %></th>
        <th><%= sortable "customer_last_name", "Last Name" %></th>
        <th><%= sortable "dealer_total_value", "Total Value" %></th>
      </tr>
  </thead>

  <tbody>
    <% @weowe_forms.each do |weowe| %>
      <tr>
        <td><%= link_to weowe.custom_date.strftime('%-m/%-d/%Y'), weowe %></td>
        <td><%= weowe.stock_number %> </td>
        <td><%= weowe.year %> </td>
        <td><%= weowe.make %> </td>
        <td><%= weowe.vehicle_model %> </td>
        <td><%= weowe.color %> </td>
        <td><%= weowe.customer_first_name %> </td>
        <td><%= weowe.customer_last_name %> </td>
        <td><%= number_to_currency(weowe.dealer_total_value) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

