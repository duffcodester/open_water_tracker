<div ng-app='weowepro' class='table-responsive'>
  <table ng-controller='WeoweFormsCtrl'
    class='table table-hover table-condensed' >
    <thead>
      <tr>
        <th ng-click='sorter.value="custom_date"'>Date Submitted</th>
        <th ng-click='sorter.value="stock_number"'>Stock Number</th>
        <th ng-click='sorter.value="year"'>Year</th>
        <th ng-click='sorter.value="make"'>Make</th>
        <th ng-click='sorter.value="vehicle_model"'>Model</th>
        <th ng-click='sorter.value="color"'>Paint</th>
        <th ng-click='sorter.value="customer_first_name"'>First Name</th>
        <th ng-click='sorter.value="customer_last_name"'>Last Name</th>
        <th ng-click='sorter.value="dealer_total_value"'>Total Value</th>
      </tr>
    </thead>

    <tbody>
      <tr ng-repeat='form in weoweForms | orderBy:sorter.value |
                     filter:search'>
        <td>
          <a ng-href='/weowe_forms/{{form.id}}'>
            {{form.custom_date | formatTime}}
          </a>
        </td>
        <td>{{form.stock_number}}</td>
        <td>{{form.year}}</td>
        <td>{{form.make}}</td>
        <td>{{form.vehicle_model}}</td>
        <td>{{form.color}}</td>
        <td>{{form.customer_first_name}}</td>
        <td>{{form.customer_last_name}}</td>
        <td>{{form.dealer_total_value | formatCurrency}}</td>
      </tr>
    </tbody>
  </table>
</div>



