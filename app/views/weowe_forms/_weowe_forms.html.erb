<div class='table-responsive'>
  <table class='table table-hover table-condensed'>
    <thead>
      <tr>
        <th>Date Submitted</th>
        <th>Stock Number</th>
        <th>Year</th>
        <th>Make</th>
        <th>Model</th>
        <th>Color</th>
        <th>Customer</th>
        <th>Total Value</th>
      </tr>
  </thead>

  <tbody>
    <% @weowe_forms.each do |weowe| %>
      <tr>
        <td><%= link_to weowe.custom_date.strftime('%-m/%-d/%Y'), weowe %></td>
        <td><%= weowe.stock_number %> </td>
        <td><%= weowe.year %> </td>
        <td><%= weowe.make %> </td>
        <td><%= weowe.vehicle_model %> </td>
        <td><%= weowe.color %> </td>
        <td>
          <%= "#{weowe.customer_first_name} #{weowe.customer_last_name}" %>
        </td>
        <td><%= weowe.dealer_total_value %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
