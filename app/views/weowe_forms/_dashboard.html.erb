<table class='table table-bordered table-condensed fixtable' >
  <thead>
    <tr>
      <th>ID</th>
      <th class='hidden-xs'>Date</th>
      <th class='hidden-xs'>Stock #</th>
      <th>Salesperson</th>
      <th>Customer</th>
      <th>Value</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @activity.each do |item| %>
      <tr>
        <td><%= link_to item.id, item %></td>
        <td class='hidden-xs'><%= item.created_at.strftime('%-m/%-d/%Y') %></td>
        <td class='hidden-xs'><%= item.stock_number %></td>
        <td><%= User.find(item.user_id).last_name %></td>
        <td><%= item.customer_last_name %></td>
        <td><%= number_to_currency(item.dealer_total_value) %></td>
        <% if classification(item.pending, item.completed) == 'Open' %>
          <td class='success'>
            <%= classification(item.pending, item.completed) %>
          </td>
          <% elsif classification(item.pending, item.completed) == 'Pending' %>
            <td class='warning'>
              <%= classification(item.pending, item.completed) %>
            </td>
          <% else %>
            <td class='danger'>
              <%= classification(item.pending, item.completed) %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

