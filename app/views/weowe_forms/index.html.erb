<div ng-app='weowepro'>
  <div ng-controller='WeoweFormsCtrl'>
    <% provide(:title, 'Index') %>
    <h1>We Owe Index</h1>

    <div class='row'>
      <div class='col-md-3'>
        <h4>Search:</h4>
        <input ng-model='search' type='text' class='form-control'>
      </div>

      <div class='col-md-6'></div>

      <div class='col-md-3'>
        <br><br>
        <div class='btn-group'>
          <%= link_to 'Add We Owe', new_weowe_form_path,
            class: 'btn btn-primary btn-sm', role: 'button' %>
          <%= link_to 'Archieved Forms', '#',
            class: 'btn btn-danger btn-sm', role: 'button' %>
      </div>

    </div>

    <br>
    <%= render 'weowe_form_index' %>
  </div>
</div>

