<div ng-app='weowepro'>
  <div ng-controller='WeoweFormsCtrl'>
    <% provide(:title, 'Index') %>
    <h1>We Owe Index</h1>

    <div class='row'>
      <div class='col-md-3'>
        <div class="input-group">
          <input class="form-control" ng-model="search" placeholder="Search"/>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-search"></span>
          </span>
        </div>
      </div>
      <div class='col-md-6'></div>
      <div class='col-md-3'>
      <div class='btn-group'>
        <%= link_to 'Add We Owe', new_weowe_form_path,
          class: 'btn btn-primary btn-sm', role: 'button' %>
        <%= link_to 'Archieved Forms', '#',
          class: 'btn btn-danger btn-sm', role: 'button' %>
      </div>
    </div>
    <br><br><br>
    <%= render 'index' %>
  </div>
</div>

