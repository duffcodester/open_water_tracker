<% provide(:title, 'We Owe Index') %>

<h1>We Owe Index</h1>

<div class='row'>

  <div class='col-md-3'>

    <%= form_tag weowe_forms_path, :method => 'get', :id => "weowe_form_search" do %>

        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>

      <%= hidden_field_tag :direction, params[:direction] %>
      <%= hidden_field_tag :sort, params[:sort] %>
    <% end %>
  </div>

  <div class='col-md-6'></div>

  <div class='col-md-3'>
    <br><br>
    <div class='btn-group'>
      <%= link_to 'Add We Owe', new_weowe_form_path,
        class: 'btn btn-primary btn-sm', role: 'button' %>
      <%= link_to 'Archieved Forms', '#',
        class: 'btn btn-danger btn-sm', role: 'button' %>
    </div>
  </div>
</div>

<br>

<%= render 'weowe_form_index' %>
