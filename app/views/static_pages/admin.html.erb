<% provide(:title, 'ADMIN') %>

<h1>Admin</h1>

<table class='u-full-width'>
  <thead>
    <tr>
      <th class='medium-grey-text'>Name</th>
      <th class='medium-grey-text'>Sessions</th>
      <th class='medium-grey-text'>Last Session</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class='medium-grey-text'>
          <%= "#{user.last_name}, #{user.first_name}" %>
        </td>
        <td class='medium-grey-text'>
          <%= user.sign_in_count %>
        </td>
        <td class='medium-grey-text'>
          <%= user.last_sign_in_at.strftime('%m/%d/%Y @ %I:%M%p') if user.last_sign_in_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
