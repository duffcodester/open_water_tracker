<% provide(:title, 'Sign In') %>
<div class='userform well'>
  <div class='userform'>
    <center>
      <h1 class='hidden-xs'>COMSA TRACKER 1.0</h1>
      <h1 class='hidden-xs'>Monitor Sign In</h1>
      <h4 class='visible-xs'>COMSA TRACKER 1.0</h4>
      <h4 class='visible-xs'>Monitor Sign In</h4>
    </center>
    <%= bootstrap_form_for(resource, :as => resource_name,
                           :url => session_path(resource_name)) do |f| %>
      <%= f.email_field :email, :autofocus => true %>
      <%= f.password_field :password %>
      <%= f.primary 'Login' %>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>

